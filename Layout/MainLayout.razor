@inherits LayoutComponentBase

<div class="page">
  <div class="sidebar">
    <NavMenu />
  </div>

  <main>
    <div class="top-row px-4 d-flex justify-content-between">
      <a class="btn-link" href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>
      <button class="btn btn-primary ml-auto" @onclick="ToggleTheme">Toggle Theme</button>
    </div>

    <article class="content px-4">
      @Body
    </article>
  </main>
</div>

@code {
  [Inject]
  private IJSRuntime? JsRuntime { get; set; }

  private async Task ToggleTheme()
  {
    if (JsRuntime != null)
    {
      await JsRuntime.InvokeVoidAsync("toggleTheme");
      await JsRuntime.InvokeVoidAsync("blurActiveElement");
    }
  }
}
